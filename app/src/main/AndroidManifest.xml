<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dheeraj.actitproject">

    <application
        android:allowBackup="true"
        android:icon="@drawable/expense"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".splashscreen.SplashScreen"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".userinterface.MainActivity" />
        <activity
            android:name=".userinterface.AddItemsUI"
            android:parentActivityName=".userinterface.MainActivity" />
        <activity android:name=".userinterface.ViewPreviousExpActivity" />
        <activity
            android:name=".userinterface.RemoveItemsActivity"
            android:parentActivityName=".userinterface.MainActivity"></activity>
        <activity android:name=".userinterface.AboutActivity"></activity>
    </application>

</manifest>
